15.
SELECT YEAR , COUNT(*) 
FROM BOOK
GROUP BY YEAR

16.	
SELECT DESCRIPTION, AVG(SOLD) 
FROM BOOK 
JOIN GENRE 
ON GENRE = GENRE_ID 
GROUP BY DESCRIPTION

17.	SELECT FIRST_NAME, LAST_NAME, SUM(SOLD) 
FROM BOOK 
LEFT JOIN AUTHOR 
ON AUTHOR = AUTHOR_ID 
GROUP BY AUTHOR

18.	
SELECT AUTHOR, FIRST_NAME, LAST_NAME, COUNT (*) 
FROM AUTHOR 
LEFT JOIN BOOK 
ON AUTHOR = AUTHOR_ID 
GROUP BY AUTHOR 
HAVING COUNT (*) = > 1

19.	SELECT NAME, COUNT (*) 
FROM BOOK 
LEFT JOIN PUBLISHER 
ON PUBLISHER = PUBL_ID 
GROUP BY NAME 
HAVING COUNT (*) = > 3

20.	
SELECT DESCRIPTION, MAX(SOLD) 
FROM BOOK
LEFT JOIN GENRE
ON GENRE = GENRE_ID
GROUP BY DESCRIPTION

